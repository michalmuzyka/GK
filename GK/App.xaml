<Application x:Class="GK.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GK"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <local:IsNullConverter x:Key="isNullConverter" />
        <local:PlayerToColorConverter x:Key="playerToColorConverter" />
        <local:WinningTileToColorConverter x:Key="winningTileToColorConverter" />
        <local:WinningTileToBorderSizeConverter x:Key="winningTileToBorderSizeConverter" />
        <local:PlayerToStringConverter x:Key="playerToStringConverter" />
        <local:StrategyToStringConverter x:Key="strategyToStringConverter" />
    </Application.Resources>
</Application>
